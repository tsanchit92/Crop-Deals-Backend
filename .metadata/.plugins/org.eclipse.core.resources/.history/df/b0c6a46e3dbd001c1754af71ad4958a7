package farmer.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import farmer.model.Address;
import farmer.model.Crop;
import farmer.model.FarmerModel;
import farmer.service.FarmerService;

@RestController
@RequestMapping("/farmer")
public class FarmerController {

	@Autowired
	public FarmerModel farmerModel;

	@Autowired
	public Crop crop;

	@Autowired
	public FarmerService farmerService;
	@GetMapping("/getCrops")
	public List<FarmerModel> getFarmerCrops()
	{
		return farmerService.getFarmerCrops();
	}
	
	@DeleteMapping("/farmer")
	public void deleteFarmer(@RequestBody FarmerModel farmerModel)
	{
		farmerService.removeFamer(farmerModel);
	}

	@PostMapping("/register")
	public void register(@RequestBody FarmerModel farmerModel) {
		farmerService.register(farmerModel);
	}

	@PostMapping("/addCrop")
	public void addCrop(@RequestBody Crop crop) {
		farmerService.addCrop(crop);
	}

	@DeleteMapping("/removeCrop")
	public void removeCrop(@RequestBody Crop crop) {
		farmerService.removeCrop(crop);
	}

	@PostMapping("/editProfile")
	public void editProfile(@RequestBody FarmerModel farmerModel,@RequestBody Address address,@RequestBody Crop crop) {
		farmerService.editProfile(farmerModel,address,crop);
	}

}
